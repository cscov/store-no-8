<!DOCTYPE html>
<html>
  <head>
    <title>StoreNo8</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if logged_in? %>
      <%= Welcome, current_user.first_name %>
      <%= button_to "Log Out", api_session_url, method: :delete %>
    <% else %>
      <%= link_to "Sign Up", new_api_user_url %>
      <%= link_to "Log In", new_api_session_url %>
      <% flash[:errors].try(:each) do |err| %>
        <%= err %>
      <% end %>
    <% end %>
    <%= yield %>
  </body>
</html>
